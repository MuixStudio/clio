{
  "name": "clio",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/go:1.3.2": {
      "version": "1.24"
    },
    "ghcr.io/devcontainers/features/node:1.6.3": {
      "version": "22.19",
      "pnpmVersion": "10.15.1"
    },
    "ghcr.io/devcontainers/features/git:1.3.4": {}
  },
  "forwardPorts": [
    "3000:3000",
    "5000:5000"
  ],
  "containerEnv": {
    "PNPM_HOME": "/usr/local/share/pnpm",
    "PNPM_STORE_PATH": "/usr/local/share/pnpm/store"
  },
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/usr/local/share/pnpm"
  },
  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": {
    "reset-pnpm-store-path": "pnpm config set store-dir /usr/local/share/pnpm/store -g",
    "init-go-dependencies": "cd server && go mod tidy",
    "init-node-dependencies": "cd web && pnpm install --store-dir /usr/local/share/pnpm/store"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker"
      ]
    },
    "jetbrains": {
      "backend": "GoLand"
    }
  },
  "remoteUser": "root"
}